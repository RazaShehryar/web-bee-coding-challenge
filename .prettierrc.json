{
  "bracketSpacing": true,
  "bracketSameLine": true,
  "singleQuote": true,
  "trailingComma": "all",
  "semi": false,
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 90,
  "arrowParens": "always",
  "importOrder": [
    "^components/(.*)$",
    "^context/(.*)$",
    "^models/(.*)$",
    "^navigation/(.*)$",
    "^screens/(.*)$",
    "^utils/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
