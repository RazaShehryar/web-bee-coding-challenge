{
  "extends": "expo/tsconfig.base",
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "noEmit": true,
    "skipLibCheck": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "components/*": ["./components/*"],
      "context/*": ["./context/*"],
      "models/*": ["./models/*"],
      "navigation/*": ["./navigation/*"],
      "screens/*": ["./screens/*"],
      "utils/*": ["./utils/*"]
    }
  },
  "include": ["src", "App.tsx"],
  "exclude": [
    "**/node_modules",
  ]
}
